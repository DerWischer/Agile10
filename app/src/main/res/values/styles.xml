<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/ActionModeTheme</item>
        <item name="actionModeCloseButtonStyle">@style/ActionModeText</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="ActionModeTheme" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/colorContextualActionBar</item>
        <item name="android:titleTextStyle">@color/colorActionModeText</item>
        <item name="subtitleTextStyle">@color/colorActionModeText</item>
    </style>

    <style name="ActionModeText" parent="Widget.AppCompat.ActionMode">
        <item name="android:tint">@color/colorActionModeText</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">#ffffff</item>
    </style>

</resources>
