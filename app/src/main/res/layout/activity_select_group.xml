<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="adp.group10.roomates.activities.SelectGroupActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical" tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">
        <Spinner
            android:id="@+id/spSelectGroup"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/bChooseGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="Sign in group"
            style="@style/Widget.AppCompat.Button.Colored"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
