<?xml version="1.0" encoding="utf-8"?>
<adp.group10.roomates.CheckableShoppingListItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/item_tile_width"
    android:layout_height="@dimen/item_tile_height"
    android:background="@drawable/selected_available_list_item_background">

<LinearLayout
              android:layout_width="@dimen/item_tile_width"
              android:layout_height="@dimen/item_tile_height"
              android:gravity="center_vertical|center_horizontal"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tvItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorActionModeText"/>
    <TextView
        android:id="@+id/tvClickToAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="\n(click to add)"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/colorActionModeText"/>
</LinearLayout>
</adp.group10.roomates.CheckableShoppingListItemLayout>