<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="adp.group10.roomates.activities.LoginActivity"
    tools:layout_editor_absoluteY="81dp" tools:layout_editor_absoluteX="0dp">

    <LinearLayout
        android:layout_width="372dp"
        android:layout_height="181dp"
        android:orientation="vertical" tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">
        <EditText
            android:id="@+id/etUserName"
            android:layout_width="373dp"
            android:layout_height="53dp"
            android:layout_weight="1" android:ems="10"
            android:hint="Usern name"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="16dp" tools:layout_editor_absoluteY="16dp"/>
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="373dp"
            android:layout_height="53dp"
            android:layout_weight="1" android:ems="10"
            android:hint="Password" android:inputType="textPassword"
            tools:layout_editor_absoluteX="16dp" tools:layout_editor_absoluteY="85dp"/>
        <Button
            android:id="@+id/bLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:text="Login"/>
        <Button
            android:id="@+id/bRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:text="New User?"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
