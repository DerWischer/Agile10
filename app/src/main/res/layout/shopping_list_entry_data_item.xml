<?xml version="1.0" encoding="utf-8"?>

<adp.group10.roomates.CheckableShoppingListItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/item_tile_width"
    android:layout_height="@dimen/item_tile_height"
    android:background="@drawable/selected_shopping_list_item_background"
    >

    <Spinner
        android:id="@+id/Unit_Choice"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:entries="@array/unit_arrays"
        android:prompt="@string/unit_prompt" android:spinnerMode="dialog"
        android:visibility="invisible"/>
    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">
        <TextView
            android:id="@+id/etName"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_span="2"
            android:elegantTextHeight="false"
            android:gravity="center_horizontal"
            android:hint="Item Name"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.512"/>

        <TextView
            android:id="@+id/etAmountPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="0dp"
            android:text="+"
            app:layout_constraintLeft_toRightOf="@+id/etAmount"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/etAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="6dp"
            android:text="1"
            android:textColor="@color/colorAccent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/etAmountMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="0dp"
            android:text="-"
            app:layout_constraintRight_toLeftOf="@+id/etAmount"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/etBlockedBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:drawablePadding="5dp"
            android:text="blockedBy"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintLeft_toLeftOf="parent"/>
    </android.support.constraint.ConstraintLayout>


</adp.group10.roomates.CheckableShoppingListItemLayout>
