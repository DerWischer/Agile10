<?xml version="1.0" encoding="utf-8"?>

<adp.group10.roomates.CheckableShoppingListItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/item_tile_width"
    android:layout_height="@dimen/item_tile_height"
    android:background="@drawable/selected_shopping_list_item_background"
    >

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">
        <TextView
            android:id="@+id/etName"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_span="2"
            android:elegantTextHeight="false"
            android:gravity="center_horizontal"
            android:hint="Item Name"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/etAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp" android:text="1"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/etBlockedBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:drawablePadding="5dp"
            android:text="blockedBy"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintLeft_toLeftOf="parent"/>
    </android.support.constraint.ConstraintLayout>


</adp.group10.roomates.CheckableShoppingListItemLayout>
