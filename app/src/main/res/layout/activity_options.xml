<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="adp.group10.roomates.activities.OptionsActivity">

    <LinearLayout
        android:layout_width="396dp"
        android:layout_height="252dp"
        android:orientation="vertical" tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="129dp">
        <Button
            android:id="@+id/bCreateNewGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="Create New Group"/>
        <Button
            android:id="@+id/bAddUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="Add Users To Group"/>
        <Button
            android:id="@+id/bShoppingList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="Shopping List"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
