<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="6">

    <TextView
        android:id="@+id/tvFromUser"
        android:hint="FromUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"/>

    <TextView
        android:id="@+id/tvToUser"
        android:hint="To User"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"/>

    <TextView
        android:id="@+id/etAmount"
        android:hint="0.00"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.75"
        android:inputType="numberDecimal"/>
    <Button
        android:id="@+id/settlement_button"
        android:layout_width="wrap_content"
        android:layout_height="28dp" android:layout_weight="0.24" android:onClick="onClick_Settlement"
        android:text="Settle" android:textSize="8sp"/>

</LinearLayout>