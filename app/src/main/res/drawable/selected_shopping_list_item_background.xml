<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- TODO Pick better colors-->

    <item android:state_checked="true">
        <!-- This applies when the item is checked. -->
        <shape android:shape="rectangle">
            <gradient
                android:angle="-90"
                android:centerColor="#d61d70"
                android:endColor="#44B5C7"
                android:startColor="#A4AEB7"/>
        </shape>
    </item>

    <item>
        <!-- This applies when the item is not checked. -->
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="1dp" android:color="#FFFFFF"/>

            <corners android:radius="1dp"/>

            <gradient
                android:angle="-90"
                android:centerColor="#1d645b"
                android:endColor="#44d2b1"
                android:startColor="#bbd1cf"/>



        </shape>
    </item>
</selector>
